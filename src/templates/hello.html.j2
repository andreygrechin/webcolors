<!doctype html>
<html lang=en>

<head>
    <meta charset=utf-8>
    <title>Hello from WebColors app</title>
    <style>
        body {
            background: {{ bgcolor }};
            color: ivory;
        }

        h1 {
            text-align: center;
            height: 90px;
        }

        th {
            background-color: DimGrey;
        }

        tr {
            background-color: Silver;
        }

        td,
        th {
            text-align: left;
            padding: 0.5em 1em;
        }

        table {
            display: block;
            max-width: 50%;
        }

        .center {
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>

<body>
    <h1>WebColors</h1>
    <table class="center">
        <thead>
            <tr>
                <th colspan="2">Parameters</th>
            </tr>
        </thead>
        <tbody>
            {% for key, value in params.items() -%}
            <tr>
                <td>{{ key }}</td>
                <td>{{ value }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>

</html>
